<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Details.CouponDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">


        <ImageView
            android:id="@+id/coupon_detail_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/all_coupondeatil_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_line"
                android:gravity="center"
                android:padding="6dp"
                android:text="MAXSAFETY"
                android:textColor="@color/Login_theme"
                android:textSize="@dimen/text_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/all_coupondeatil_copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="right|center"
                android:text="@string/copy_button"
                android:textAllCaps="false"
                android:textColor="@color/Login_theme"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/all_coupondeatil_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="hehehhehe"
            android:textSize="@dimen/hint_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/product_description"
            android:textColor="@color/textview_text_color"
            android:textSize="@dimen/hint_text_size"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/card_corners"
            app:cardElevation="2dp">

            <TextView
                android:id="@+id/all_coupondeatil_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="hehehhehe"
                android:textColor="@color/textview_text_color"
                android:textSize="@dimen/hint_text_size" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>