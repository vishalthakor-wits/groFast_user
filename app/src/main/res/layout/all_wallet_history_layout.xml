<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="@dimen/card_corners">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/wallet_coin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Order_id"
                        android:textColor="@color/default_color"
                        android:textSize="@dimen/hint_text_size" />

                    <TextView
                        android:id="@+id/wallet_history_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="order id"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="@color/textview_text_color"
                        android:textSize="@dimen/hint_text_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wallet_history_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="status"
                        android:textColor="@color/textview_text_color"
                        android:textSize="@dimen/small_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:text="at"
                        android:textColor="@color/textview_text_color"
                        android:textSize="@dimen/small_text" />

                    <TextView
                        android:id="@+id/wallet_history_created_at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Created at"
                        android:textColor="@color/textview_text_color"
                        android:textSize="@dimen/small_text" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/creadited"
                    android:layout_width="@dimen/hint_text_size"
                    android:layout_height="@dimen/small_text"
                    android:src="@drawable/add"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    app:tint="@color/Login_theme" />

                <ImageView
                    android:id="@+id/debited"
                    android:layout_width="@dimen/hint_text_size"
                    android:layout_height="@dimen/small_text"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:src="@drawable/baseline_horizontal_rule_24"
                    app:tint="@color/expired" />

                <TextView
                    android:id="@+id/wallet_history_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="points"
                    android:textSize="@dimen/hint_text_size" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>