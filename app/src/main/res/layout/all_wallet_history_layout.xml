<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_corners"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/wallet_coin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wallet_history_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="order id"
                    android:textColor="@color/textview_text_color"
                    android:textSize="@dimen/hint_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wallet_history_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="status"
                        android:textColor="@color/textview_text_color"
                        android:textSize="@dimen/small_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:text="at"
                        android:textColor="@color/textview_text_color"
                        android:textSize="@dimen/small_text" />

                    <TextView
                        android:id="@+id/wallet_history_created_at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Created at"
                        android:textColor="@color/textview_text_color"
                        android:textSize="@dimen/small_text" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/wallet_history_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="points"
                android:textColor="@color/textview_text_color"
                android:textSize="@dimen/hint_text_size" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>